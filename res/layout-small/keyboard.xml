<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
<RelativeLayout 

		android:id="@+id/button_area"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:layout_weight="1"
        android:gravity="fill">

     <TextView 
     		  android:id="@+id/text" 
              android:layout_width="240px" 
              android:layout_height="120px" 
			  android:hint="數字顯示框"
              android:textSize="32dp"
              android:textColor="@color/black"
              android:gravity="center_vertical"
              android:paddingTop="52px"
              android:paddingLeft="72px"
              android:layout_marginTop="5px"
              android:layout_marginLeft="40px"	
              android:background="@drawable/textground"/>
            <TextView 
			 android:id="@+id/title_firstline"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
		 	android:paddingLeft="100px"
		 	android:paddingTop="20px"
			 android:textColor="@color/black"
			 android:text="@string/title1"
		 />           
		 <TextView 
			 android:id="@+id/title_secondline"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"    
			 android:paddingLeft="100px"
			 android:layout_below="@id/title_firstline"
			 android:textColor="@color/black"
			 android:text="@string/title2"
		 />  
		 <TextView 
			 android:id="@+id/title_thirdline"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:paddingLeft="100px"
			 android:layout_below="@id/title_secondline"
			 android:textColor="@color/black"
			 android:text="@string/title3"
		 />
		  <TextView 
			 android:id="@+id/title_fourline"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:paddingLeft="44px"
			 android:textSize="32dp"
			 android:layout_below="@id/title_thirdline"
			 android:textColor="@color/brown"
			 android:layout_marginTop="10px"
			 android:text="HQ"
		 />     
       <Button 
    	android:id="@+id/button_1" 
    	android:layout_marginTop="1px"
    	android:layout_below="@id/text"
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:layout_marginLeft="24px"
         android:textSize="40dp"
        android:background="@drawable/button_background"
        android:text="1" />

      <Button 
    	android:id="@+id/button_2" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_1"
		android:layout_alignTop="@id/button_1"
		android:textSize="40dp"
        android:text="2" />
 <Button 
    	android:id="@+id/button_3" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_2"
		android:layout_alignTop="@id/button_2"	
		android:textSize="40dp"
        android:text="3" /> 
      <Button 
    	android:id="@+id/button_4" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
        android:layout_below="@id/button_1"
        android:layout_alignLeft="@id/button_1"
        android:textSize="40dp"
        android:text="4" />
      <Button 
    	android:id="@+id/button_5" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_4"
		android:layout_alignTop="@id/button_4"
		android:layout_below="@id/button_2"
		android:textSize="40dp"
        android:text="5" />
     <Button 
    	android:id="@+id/button_6" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_5"
		android:layout_alignTop="@id/button_5"
		android:layout_below="@id/button_3"
		android:textSize="40dp"
        android:text="6" /> 
      <Button 
    	android:id="@+id/button_7" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
        android:layout_below="@id/button_4"
        android:layout_alignLeft="@id/button_4"
        android:textSize="40dp"
        android:text="7" />
      <Button 
    	android:id="@+id/button_8" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_7"
		android:layout_alignTop="@id/button_7"
		android:layout_below="@id/button_5"
		android:textSize="40dp"
        android:text="8" />
     <Button 
    	android:id="@+id/button_9" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_8"
		android:layout_alignTop="@id/button_8"
		android:layout_below="@id/button_6"
		android:textSize="40dp"
        android:text="9" />                
        <Button 
    	android:id="@+id/button_clear" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_below="@id/button_7"
		android:layout_alignLeft="@id/button_7"
		android:layout_marginBottom="1dip"
		android:textSize="20dp"
        android:text="清除" />         
        <Button 
    	android:id="@+id/button_0" 
        android:layout_width="180dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
        android:layout_toRightOf="@id/button_clear"
		android:layout_below="@id/button_8"
		android:textSize="40dp"
        android:text="0" />    
          
</RelativeLayout>-->
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
        <TextView android:id="@+id/right_ad" 
              android:layout_width="fill_parent" 
              android:layout_height="40dip" 
              android:text="以後要放的廣告"
              android:textSize="40dp"
              android:gravity="center_vertical"
              android:paddingLeft="30px"
              android:background="@drawable/test2"/>
</LinearLayout>
</LinearLayout>