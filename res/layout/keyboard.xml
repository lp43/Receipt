<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <TextView android:id="@+id/text" 
              android:layout_width="fill_parent" 
              android:layout_height="60dip" 
			  android:hint="數字顯示框"
              android:textSize="40dp"
              android:gravity="center_vertical"
              android:paddingLeft="50px"
              android:background="@drawable/test2"/>
</LinearLayout>
<RelativeLayout 
		android:id="@+id/button_area"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_weight="1"
        android:gravity="bottom|right">
       <Button 
    	android:id="@+id/button_1" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"

        android:text="1" />

      <Button 
    	android:id="@+id/button_2" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_1"
		android:layout_alignTop="@id/button_1"
        android:text="2" />
 <Button 
    	android:id="@+id/button_3" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_2"
		android:layout_alignTop="@id/button_2"	
		android:layout_marginRight="25dip"	
        android:text="3" /> 
      <Button 
    	android:id="@+id/button_4" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
        android:layout_below="@id/button_1"
        android:layout_alignLeft="@id/button_1"
        android:text="4" />
      <Button 
    	android:id="@+id/button_5" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_4"
		android:layout_alignTop="@id/button_4"
		android:layout_below="@id/button_2"
        android:text="5" />
     <Button 
    	android:id="@+id/button_6" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_5"
		android:layout_alignTop="@id/button_5"
		android:layout_below="@id/button_3"
        android:text="6" /> 
      <Button 
    	android:id="@+id/button_7" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
        android:layout_below="@id/button_4"
        android:layout_alignLeft="@id/button_4"
        android:text="7" />
      <Button 
    	android:id="@+id/button_8" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_7"
		android:layout_alignTop="@id/button_7"
		android:layout_below="@id/button_5"
        android:text="8" />
     <Button 
    	android:id="@+id/button_9" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_toRightOf="@id/button_8"
		android:layout_alignTop="@id/button_8"
		android:layout_below="@id/button_6"
        android:text="9" />                
        <Button 
    	android:id="@+id/button_clear" 
        android:layout_width="90dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
		android:layout_below="@id/button_7"
		android:layout_alignLeft="@id/button_7"
		android:layout_marginBottom="1dip"
        android:text="清除" />         
        <Button 
    	android:id="@+id/button_0" 
        android:layout_width="180dip" 
        android:layout_height="70dip" 
        android:background="@drawable/button_background"
        android:layout_toRightOf="@id/button_clear"
		android:layout_below="@id/button_8"
        android:text="0" />    
          
</RelativeLayout>
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
        <TextView android:id="@+id/right_ad" 
              android:layout_width="fill_parent" 
              android:layout_height="40dip" 
              android:text="以後要放的廣告"
              android:textSize="40dp"
              android:gravity="center_vertical"
              android:paddingLeft="30px"
              android:background="@drawable/test2"/>
</LinearLayout>
</LinearLayout>